{% macro service(shadow, color, heading, para , readMoreUrl) %}

<div class="p-6 bg-white border border-gray-100 rounded-lg {{ shadow }}">

   <div class="w-12 h-1.5 {{ color }}"></div>

   <h3 class="font-semibold text-xl mt-2.5">{{ heading }}</h3>

   <p class="mt-4 text-gray-600">
      {{ para }}
   </p>

   <a href="{{ readMoreUrl }}" class="mt-4 inline-block text-cyan-300">
      Read More &rarr;
   </a>

</div>

{% endmacro %}